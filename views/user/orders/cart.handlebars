<div class="container">
    <div class="text-center">
        <h1 class="bagtotal mt-5">Your bag total is <span id="totalprice"></span></h1>
        {{!-- Redirect to payment page --}}
        <a href="/cart/payment">
            <button class="btn btn-primary mt-2">Checkout</button>
        </a>
    </div>
</div>


<div id="cart-container" class="container">
    <div class="cart-items">
    {{#each products}}
        <div class="cart-row">
            <div class="cart-item cart-column">
                <img class="cart-item-image" width="100" height="100">
                <span class="cart-item-title">{{product}}</span>
            </div>
            <span class="cart-price cart-column">${{price}}</span>
            <div class="cart-quantity cart-column">
                {{!-- Retrieve value here --}}
                <input class="cart-quantity-input" type="number" value="1">
                <button class="btn btn-danger" type="button">Remove</button>
            </div>
        </div>
    {{/each}}
    </div>
</div>