<div class="container">
	<div class="mr-5 card card-body">
		<h3>Update Profile</h3>
		<form action="/update/{{content.uuid}}?_method=PATCH" method="post" id="content-form" enctype="multipart/form-data">
			<div class="form-group">
				<label class="font-italic" for="name">Name</label>
				<input type="text" class="form-control" name="name" value="{{content.name}}" required>
			</div>
			<div class="form-group">
				<label class="font-italic" for="name">Email</label>
				<input type="email" class="form-control" name="email" value="{{content.email}}" required>
			</div>
			
			<button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>
			
			<a class="btn btn-primary" href="/profile">Back</a>
		</form>
	</div>
</div>
